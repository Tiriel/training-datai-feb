{% extends 'base.html.twig' %}

{% block title %}{{ movie is empty ? 'Not found' : movie.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if movie is not empty %}
        <h1>{{ movie.title }}</h1>

        <img class="float-end" src="{{ movie.cover }}" alt="{{ movie.title }} cover">
        <ul>
            <li>Id : {{ movie.id }}</li>
            <li>Plot : {{ movie.plot }}</li>
            <li>Released at : {{ movie.releasedAt|date('d M Y') }}</li>
            <li>Genre : {{ movie.genre|join(', ') }}</li>
        </ul>
    {% else %}
        <h1>Not found</h1>
    {% endif %}
</div>
{% endblock %}
